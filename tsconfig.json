{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "types/*": ["src/types/*"],
      "components/*": ["src/components/*"],
      "modules/*": ["src/modules/*"],
      "@/*": ["src/*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}